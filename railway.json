{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksVersion": "1.38.0",
    "nixPkgs": ["nodejs-20_x", "openssl"]
  },
  "deploy": {
    "startCommand": "npm run build && npm run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}